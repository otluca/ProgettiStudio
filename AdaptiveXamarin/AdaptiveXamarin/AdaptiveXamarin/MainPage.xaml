<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdaptiveXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" HeightRequest ="100" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Frame BackgroundColor="White" HeightRequest="900" Padding="24" CornerRadius="0">
            <Label Text="Ciao" FontSize="Title" Padding="30,10,30,10"
                HorizontalTextAlignment="{OnIdiom 
                    Phone=Start,
                    Tablet=End
                }"
                VerticalTextAlignment="{OnIdiom
                    Phone=Center,
                    Tablet={OnPlatform iOS=Start, Android=Start }
                }"
                />
        </Frame>
    </StackLayout>

</ContentPage>
